<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/kpBackgroundColor"
	tools:context=".picker.KPPicturePreviewActivity">
	
	<android.support.v4.view.ViewPager
		android:id="@id/kpViewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
	
	<LinearLayout
		android:id="@id/kpActionbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/kpActionBarColor"
		android:gravity="center_vertical">
		
		<TextView
			android:id="@id/kpEdit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="?android:attr/selectableItemBackground"
			android:padding="12dp"
			android:textColor="@android:color/white"
			android:textSize="14sp"
			tools:text="@string/kp_edit"/>
		
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:background="@android:color/transparent"
			android:clickable="true"/>
		
		<TextView
			android:id="@id/kpSelected"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="?android:attr/selectableItemBackground"
			android:drawableLeft="@drawable/kp_ic_picture_check"
			android:drawablePadding="3dp"
			android:drawableStart="@drawable/kp_ic_picture_check"
			android:gravity="center_vertical"
			android:padding="12dp"
			android:text="@string/kp_selected"
			android:textColor="@android:color/white"
			android:textSize="14sp"/>
	</LinearLayout>
</RelativeLayout>